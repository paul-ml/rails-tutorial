<body background="https://www.walldevil.com/wallpapers/a21/images-background-light-blue-opera-hours-performed-worked.jpg">
<div class="jubtron">
<%= @user.name %>, <%= @user.email %> ,<%= "Hello"%>
<br>
<%="Your account has been creat at:" %> <%= @user.created_at %>
</div>
<div class="center jubtron">

<b><h2><%="HEY"%>  <%= @user.name %> <%="You looking great today !"%> </h2></b>





<div class="row">
<aside class="col-sm-6">
<section class="user_info"> 
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>

  </h1>
  </section>
  <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
    </div>
</div>
</div>
</body>
